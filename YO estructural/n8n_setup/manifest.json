  "flujo_instalacion": [
    "1. Ejecutar: deploy-n8n-complete.ps1",
    "2. Script descarga Node.js 18 LTS",
    "3. Instala n8n globalmente",
    "4. Genera .env seguro",
    "5. Importa 3 workflows",
    "6. Valida conectividad",
    "7. (Opcional) Crea servicio Windows",
    "8. Validación post-instalación"
  ],
  
  "flujo_operacion": [
    "1. Ejecutar: n8n start --env-file $env:USERPROFILE\\.n8n\\.env",
    "2. Abrir: http://localhost:5678",
    "3. Ver 3 workflows en UI (estado: ACTIVE)",
    "4. Copiar archivos a carpeta monitoreada",
    "5. Workflow 1 detecta y procesa",
    "6. Workflow 2 sincroniza con Neo4j",
    "7. Workflow 3 enriquece datos"
  ],
  
  "requisitos_minimos": {
    "sistema_operativo": "Windows 10 / Windows 11",
    "powershell": "5.1 o superior",
    "permisos": "Administrador",
    "ram": "2 GB disponible",
    "conexion": "Internet (descarga)",
    "neo4j": "Accesible en red (192.168.1.37:7687 por defecto)"
  },
  
  "integraciones": {
    "neo4j": {
      "version": "5.12.0",
      "host": "192.168.1.37",
      "puerto": 7687,
      "usuario": "neo4j",
      "database": "neo4j"
    },
    "node": {
      "version": "18 LTS",
      "gestor": "npm"
    },
    "n8n": {
      "instalacion": "global",
      "base_datos": "SQLite (local) o Postgres (opcional)"
    },
    "python": {
      "integracion": "via integraciones/n8n_config.py",
      "metodo": "N8nIntegrator.enviar_datos_webhook()"
    }
  },
  
  "no_versionar": [
    "%USERPROFILE%\\.n8n\\",
    ".env (variables de entorno)",
    ".env.local",
    "n8n.db (base de datos)",
    "credentials.json (credenciales cifradas)",
    "logs/ (archivos de log)",
    "node_modules/ (dependencias)"
  ],
  
  "si_versionar": [
    "n8n_setup/",
    "*.ps1 (scripts)",
    "workflows/*.json (definiciones)",
    "*.md (documentación)",
    "credentials_template.json (template únicamente)"
  ],
  
  "comandos_utiles": {
    "instalacion": [
      "Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Scope CurrentUser",
      ".\\deploy-n8n-complete.ps1",
      ".\\validate-installation.ps1"
    ],
    "operacion": [
      "n8n start",
      "n8n start --env-file $env:USERPROFILE\\.n8n\\.env",
      "n8n start --tunnel"
    ],
    "monitoreo": [
      "n8n list:workflows",
      "n8n list:executions",
      "Invoke-RestMethod http://localhost:5678/healthz",
      "tail -f $env:USERPROFILE\\.n8n\\logs\\*"
    ],
    "mantenimiento": [
      "n8n export:workflow --all --output backup.json",
      "n8n import:workflow --input workflow.json",
      "n8n export:credentials --output creds_backup.json"
    ]
  },
  
  "rutas_importantes": {
    "instalacion": "%USERPROFILE%\\.n8n\\",
    "configuracion": "%USERPROFILE%\\.n8n\\.env",
    "base_datos": "%USERPROFILE%\\.n8n\\n8n.db",
    "workflows": "%USERPROFILE%\\.n8n\\workflows\\",
    "logs": "%USERPROFILE%\\.n8n\\logs\\",
    "credenciales": "%USERPROFILE%\\.n8n\\credentials.json"
  },
  
